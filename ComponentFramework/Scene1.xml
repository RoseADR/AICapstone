<?xml version="1.0" encoding="utf-8"?>

<DecisionTree>
	<Node id="root" type="Decision">
		<Condition>
			<Check type="EnemyVisible" value="true" />
		</Condition>
		<TrueNode>
			<Node id="engage" type="Decision">
				<Condition>
					<Check type="EnemyHealth" comparison="greater_than" value="50" />
				</Condition>
				<TrueNode>
					<Node id="attack" type="Action">
						<Action>Attack</Action>
					</Node>
				</TrueNode>
				<FalseNode>
					<Node id="defend" type="Action">
						<Action>Defend</Action>
					</Node>
				</FalseNode>
			</Node>
		</TrueNode>
		<FalseNode>
			<Node id="evaluate" type="Decision">
				<Condition>
					<Check type="HasObjective" value="true" />
				</Condition>
				<TrueNode>
					<Node id="patrol" type="Action">
						<Action>Patrol</Action>
					</Node>
				</TrueNode>
				<FalseNode>
					<Node id="retreat" type="Action">
						<Action>Retreat</Action>
					</Node>
				</FalseNode>
			</Node>
		</FalseNode>
	</Node>
</DecisionTree>